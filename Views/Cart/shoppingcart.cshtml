@model List<Cart>
@{
    ViewData["Title"] = "shoppingcart";
}

<h1>سلة المشتريات</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">اسم المنتج</th>
      <th scope="col">السعر</th>
       <th scope="col">صورة المنتج</th>
      <th scope="col"></th>
       <th scope="col"></th>
    </tr>
      <tbody>
@foreach (var item in @Model)
{
   foreach (var p in @item.products)
    {
      <tr>
      <td>@p.Name</td>
      <td>@p.Price</td>
       <td><img src="/img/ProductImages/@p.Image" width="100" height="100"></td>
      <td><a class="btn btn-info" >طلب المنتج</a></td>
      <td><a class="btn btn-info" >حذف</a></td>
    </tr>
    }
}
  </tbody>
  </thead>
</table>


