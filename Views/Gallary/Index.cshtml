@using ProductGallary.TDO
@model List<GalaryInfoDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>المعارض</h1>
<div class="container">
<div class="row">

   @foreach (var item in @Model)
    {     
<div class="card col-4">
  <img class="card-img-top" height="300" width="360" src="/img/@item.Logo" alt="Card image">
  <div class="card-body">
    <h4 class="card-title">@item.Name</h4>
    <p class="card-text">@item.Created_Date</p>
  <a class="btn btn-info" asp-controller="Gallary" asp-action="Details" asp-route-id="@item.Id">المزيد</a>
  <a class="btn btn-info" asp-controller="Gallary" asp-action="edit" asp-route-id="@item.Id">تعديل المعرض</a>
  </div>
</div>
    }
  </div>
  </div>

