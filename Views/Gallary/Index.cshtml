@using ProductGallary.TDO

@{
    ViewData["Title"] = "Index";
}

<h1>المعارض</h1>
<div class="container">
<div class="row">

   @foreach (var item in @Model)
    { 

<div class="card col-4">
  <img class="card-img-top" height="300" width="360" src="/img/GallaryLogo/@item.Logo" alt="Card image">
  <div class="card-body">
    <h4 class="card-title">@item.Name</h4>
    <p class="card-text">@item.Created_Date</p>
  <a class="btn btn-info" asp-controller="Gallary" asp-action="Details" asp-route-id="@item.Id">المزيد</a>
   @if (User.Identity.IsAuthenticated && User.IsInRole(role: Roles.BUYER_ROLE))
   {
  <a class="btn btn-dark" asp-area="" asp-controller="Gallary" asp-action="Dashboard" asp-route-id="@item.user_id">معارضي</a>

   }
  </div>
</div>
    }
  </div>
  </div>

